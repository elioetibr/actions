{
  "name": "actions",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=20.0.0 <26.0.0"
  },
  "description": "GitHub Actions",
  "main": "src/index.ts",
  "author": "Elio Severo Junior <elio@elio.eti.br>",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "clean": "rm -rf ./dist",
    "clean-all": "rm -rf ./coverage ./dist ./node_modules",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint --no-warn-ignored src/**/*.ts",
    "lint:fix": "eslint --no-warn-ignored --fix src/**/*.ts",
    "lint:tsc": "tsc --noEmit",
    "report-coverage": "jest --coverage --color --coverageReporters=\"json-summary\" && jq -r '(.total.lines.pct | tostring) + \"% lines, \" + (.total.statements.pct | tostring) + \"% statements, \" + (.total.functions.pct | tostring) + \"% functions, \" + (.total.branches.pct | tostring) + \"% branches\"' coverage/coverage-summary.json",
    "test": "jest",
    "test:coverage": "jest --coverage --color",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "update-readme": "ts-node scripts/updateReadme.ts"
  },
  "keywords": [
    "github",
    "actions",
    "docker",
    "tags"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@docker/actions-toolkit": "^0.61.0",
    "@octokit/auth-app": "^8.2.0",
    "@octokit/core": "^7.0.6",
    "@octokit/plugin-paginate-rest": "^13.2.1",
    "@octokit/request": "^10.0.7",
    "@octokit/request-error": "^7.1.0",
    "@octokit/rest": "^21.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "packageManager": "pnpm@10.29.2",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
