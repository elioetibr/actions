{
  "name": "elioetibr-actions",
  "private": true,
  "version": "0.0.1",
  "engines": {
    "node": ">=20.0.0 <26.0.0"
  },
  "description": "GitHub Actions",
  "main": "dist/index.js",
  "author": "Elio Severo Junior <elio@elio.eti.br>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build --clean && ncc build --source-map --out ./dist ./src/index.ts",
    "clean": "rm -rf ./dist",
    "clean-all": "rm -rf ./dist ./coverage",
    "development": "tsc --build --clean && ncc build --watch --out ./dist ./src/index.ts",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "lint:tsc": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "pack": "ncc build src/index.ts --out ./dist --license licenses.txt",
    "test": "jest",
    "test:coverage": "jest --coverage --color",
    "test:watch": "jest --watch",
    "report-coverage": "jest --coverage --color --coverageReporters=\"json-summary\" && jq -r '(.total.lines.pct | tostring) + \"% lines, \" + (.total.statements.pct | tostring) + \"% statements, \" + (.total.functions.pct | tostring) + \"% functions, \" + (.total.branches.pct | tostring) + \"% branches\"' coverage/coverage-summary.json",
    "update-readme": "ts-node scripts/updateReadme.ts"
  },
  "keywords": [
    "github",
    "actions",
    "docker",
    "tags"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@docker/actions-toolkit": "^0.61.0",
    "@octokit/auth-app": "^8.0.1",
    "@octokit/core": "^7.0.2",
    "@octokit/plugin-paginate-rest": "^13.0.0",
    "@octokit/request": "^10.0.2",
    "@octokit/request-error": "^7.0.0",
    "@octokit/rest": "^21.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.49",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
